<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/favContent"
        android:layout_width="475px"
        android:layout_height="700px"
        android:background="#414141"
        android:orientation="vertical" >

        <!-- ScrollView is needed when adding views, or only the last view will show up -->

        <TextView
            android:id="@+id/empty_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/listViewFavs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/empty_textview" >
        </ListView>
    </RelativeLayout>

</ScrollView>
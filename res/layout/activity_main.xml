<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|top" >

    <RelativeLayout
        android:id="@+id/maincontents"
        android:layout_width="475px"
        android:layout_height="700px"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageMain_Sports_Screen"
            android:layout_width="fill_parent"
            android:layout_height="180px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/main_sports_screen" />

        <Button
            android:id="@+id/chooseBaseball"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_below="@+id/imageMain_Sports_Screen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/button_baseball_change"
            android:onClick="chooseBaseball"
            android:soundEffectsEnabled="true" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="40px"
            android:background="@drawable/button_logout_change"
            android:onClick="logOut" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_alignBaseline="@+id/buttonLogout"
            android:layout_alignBottom="@+id/buttonLogout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginBottom="100px"
            android:background="@drawable/button_account_settings_change"
            android:onClick="chooseSettings" />

        <Button
            android:id="@+id/createAccButton"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_alignBaseline="@+id/settingsButton"
            android:layout_alignBottom="@+id/settingsButton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginBottom="100px"
            android:background="@drawable/button_create_an_account_change"
            android:onClick="createAccount" />

        <Button
            android:id="@+id/button1Login"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_alignBaseline="@+id/buttonLogout"
            android:layout_alignBottom="@+id/buttonLogout"
            android:layout_alignLeft="@+id/buttonLogout"
            android:layout_marginBottom="100px"
            android:background="@drawable/button_login_change"
            android:onClick="chooseLogin" />

    </RelativeLayout>

</FrameLayout>

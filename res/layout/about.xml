             android:layout_marginLeft="10px"
             android:layout_marginRight="10px"
             android:layout_marginTop="10px"
             android:text="* Juan C. Zepeda"
             android:textColor="#000000"
             android:textSize="12px" />
         
         <TextView
             android:id="@+id/about_nazmul"

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content" >

<LinearLayout
    style="@style/LoginFormContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <ImageView
            android:id="@+id/imageJoinTeam"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="199dp"
            android:src="@drawable/join_a_team" />

     <EditText
         android:id="@+id/sendMessEditText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:inputType="textMultiLine" >

         <requestFocus />
     </EditText>

     <Button
         android:id="@+id/sendMessagebutton"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Send"
         android:onClick="sendMessage" />

     <TextView
         android:id="@+id/coach"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="Enter the Team name you wish to register"
         android:textAppearance="?android:attr/textAppearanceMedium" />
     
         <EditText
             android:id="@+id/coachCode"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:ems="10"
             android:hint="Enter Team Name"
             android:inputType="text" />
     
      <Button
          android:id="@+id/buttonrequestcoach"
          android:layout_width="120dp"
          android:layout_height="40dp"
          android:background="@drawable/button_register_team_change"
          android:layout_gravity="right"
          android:layout_marginTop="10dp"
          android:onClick="request" />
    
         <TextView
             android:id="@+id/entCoach"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="30dp"
             android:text="Below is your Team Code:"
             android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/teamcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#1900ff"
        android:hint="Team Code" />
    
    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter the team code you wish to join "
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
         <EditText
             android:id="@+id/teamCode"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:ems="10"
             android:hint="Enter Team Code"
             android:inputType="text" />

    <Button
        android:id="@+id/buttoncoachcode"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_join_team_change"
        android:layout_gravity="right"
        android:layout_marginTop="10dp" 
        android:onClick="register" />

</LinearLayout>
    
   
</ScrollView>

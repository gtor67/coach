<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateAccount" >

    <!-- Create an Account Button -->

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="475px"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageCoach_Account_Register"
            android:layout_width="475px"
            android:layout_height="250px"
            android:src="@drawable/coach_clipboard_account_register" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:layout_marginTop="10dp"
            android:text="Account Registration"
            android:textSize="18px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:text="Sign up by entering your email address and password."
            android:textSize="10px" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:text="@string/enter_Email"
            android:textSize="10px" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/passTextView"
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:text="@string/enter_Pass"
            android:textSize="10px" />

        <EditText
            android:id="@+id/passEditText"
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:ems="10"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="120px"
            android:layout_height="40px"
            android:background="@drawable/button_create_an_account_change"
            android:gravity="center_horizontal"
            android:onClick="createAccount" />

    </LinearLayout>

</FrameLayout>

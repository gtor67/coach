<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createcontainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateAccount" >

    <LinearLayout
        android:id="@+id/createcontent"
        android:layout_width="475px"
        android:layout_height="700px"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageCoach_Account_Register"
            android:layout_width="263px"
            android:layout_height="154px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:src="@drawable/coach_clipboard_account_register" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:text="Account Registration"
            android:textSize="12px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:text="Sign up by entering your email address and password."
            android:textSize="8px" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:text="@string/enter_Email"
            android:textSize="8px" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:inputType="textEmailAddress"
            android:textSize="10px" />

        <TextView
            android:id="@+id/passTextView"
            android:textSize="8px"       
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:text="@string/enter_Pass" />

        <EditText
            android:id="@+id/passEditText"
            android:textSize="10px"       
             android:layout_width="fill_parent"
            android:layout_height="50px"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="120px"
            android:layout_height="40px"
            android:layout_marginTop="10px"
            android:background="@drawable/button_create_an_account_change"
            android:gravity="center_horizontal"
            android:onClick="createAccount" />

    </LinearLayout>

    <!-- Create an Account Button -->

</RelativeLayout>
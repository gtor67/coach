
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/contentcontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/contentcontent"
            android:layout_width="475px"
            android:layout_height="700px"
            android:scrollbarStyle="outsideOverlay" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

               <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="80px"
                    android:gravity="center"
                    android:text="title"
                    android:textSize="8px"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="225px"
                        android:layout_height="225px" />

                    <LinearLayout
                        android:layout_width="250px"
                        android:layout_height="225px"
                        android:orientation="vertical" >

                     <TextView
                            android:id="@+id/textViewEmailHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:gravity="center"
                            android:text="Focus"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="8px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5px"
                            android:fadeScrollbars="false"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbars="vertical"
                            android:text="focus"
                            android:textSize="5px" />
                    </LinearLayout>
                
                   </LinearLayout>
                   
              <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/viewVideobutton"
                        android:layout_width="100px"
                        android:layout_height="50px"
                        android:layout_marginLeft="50px"
                        android:background="@drawable/button_view_video_change"
                        android:onClick="viewVideo" />

                    <Button
                        android:id="@+id/add_favorites_button"
                        android:layout_width="100px"
                        android:layout_height="50px"
                        android:layout_marginLeft="50px"
                        android:background="@drawable/button_favorites_change"
                        android:onClick="addToFavorites" />

                </LinearLayout>
             <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_marginTop="7px"
                    android:gravity="center"
                    android:text="Procedure"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="8px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:text="procedure"
                    android:textSize="8px" />
        
        <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="88dp" android:scrollbarStyle="outsideOverlay">
        </ScrollView>



	 <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="Zoomed in image" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

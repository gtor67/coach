<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recovercontainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recoverframe"
        style="@style/LoginFormContainer"
        android:layout_width="475px"
        android:layout_height="700px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imagePerson_Forgot_Password"
            android:layout_width="267px"
            android:layout_height="200px"
            android:layout_gravity="center"
            android:src="@drawable/person_forgot_password" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:text="Forgot your password?"
            android:textSize="12px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:layout_marginTop="2px"
             android:textSize="8px"
            android:text="Enter your email address below and you will be able to reset your password by checking your inbox." />

        <EditText
            android:id="@+id/editTextrecoverEmail"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_marginTop="20px"
           android:textSize="8px"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <!-- Reset Button -->

        <Button
            android:id="@+id/buttonRecover"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_gravity="right"
            android:layout_marginTop="10px"
            android:background="@drawable/button_reset_change"
            android:onClick="resetPassword"
            android:paddingLeft="32px"
            android:paddingRight="32px" />
    </LinearLayout>

</RelativeLayout>
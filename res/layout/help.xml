<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageCustomerServiceAgents"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="172dp"
            android:src="@drawable/customer_service_agent" />
         
         <TextView
	       android:id="@+id/get_in_touch_header"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:text="Get in touch!"
	       android:textColor="#000000"
	       android:textStyle="bold"
	       android:textSize="24sp" />
	           
	     <TextView
	       android:id="@+id/get_in_touch_intro"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:layout_marginTop="2dp"
	       android:text="Having a bit of trouble with our app, or not quite sure why something doesn't seem to be working right? Not to worry, our friendly customer service support team is always readily available to help you along the way. For your convenience, we offer a variety of ways for you to get in touch with us."
	       android:textColor="#000000"
           android:textSize="14sp" />
	     
	     <TextView
	       android:id="@+id/email_header"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:text="Email"
	       android:textColor="#000000"
	       android:textStyle="bold"
	       android:textSize="18sp" />
	           
	     <TextView
	       android:id="@+id/email_info"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:layout_marginTop="2dp"
	       android:text="Need questions answered right away? Not to worry, Our customer service agents are here for you 24/7, and are eager to respond to your email questions right away. You can send us an email message with app questions at coachme@emailsupport.com"
	       android:textColor="#000000"
           android:textSize="14sp" />
	     
	     <TextView
	       android:id="@+id/phone_header"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:text="Phone"
	       android:textColor="#000000"
	       android:textStyle="bold"
	       android:textSize="18sp" />
	           
	     <TextView
	       android:id="@+id/phone_info"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:layout_marginTop="2dp"
	       android:text="Need to go analog and get in touch with us by phone? Our customer service agents look forward helping you. Speak one-on-one with any of our friendly customer service agents, for overall app questions, to offer some feedback, or to just say hi! Our agents are available 24/7 to take your call. Call us at (1-877-345-6689)"
	       android:textColor="#000000"
           android:textSize="14sp" />
	     
	     <TextView
	       android:id="@+id/mail_header"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:text="Mail"
	       android:textColor="#000000"
	       android:textStyle="bold"
	       android:textSize="18sp" />
	           
	     <TextView
	       android:id="@+id/mail_info"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dp"
	       android:layout_marginRight="10dp"
	       android:layout_marginTop="2dp"
	       android:text="Send us any questions that you may have via snail mail:"
	       android:textColor="#000000"
           android:textSize="14sp" />
	     
	     <TextView
             android:id="@+id/mail_address1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:text="CoachMe.com"
             android:textColor="#000000"
             android:textSize="14sp" />
         
         <TextView
             android:id="@+id/mail_address2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:text="P.O. Box 456"
             android:textColor="#000000"
             android:textSize="14sp" />
         
         <TextView
             android:id="@+id/mail_address3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp"
             android:text="Long Beach, CA 90840"
             android:textColor="#000000"
             android:textSize="14sp" />
    </LinearLayout>
    
   
</ScrollView>